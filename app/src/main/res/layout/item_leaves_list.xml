<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/adapter_student_homework_viewContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/adapter_student_homework_headLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/apply_date_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:textSize="@dimen/primaryText"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="Apply Date"
                android:textStyle="bold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true">


                <LinearLayout
                    android:id="@+id/detailsBtn"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_trash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="@color/hyperLink"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#979797"
            android:layout_below="@+id/adapter_student_homework_headLayout"/>

        <RelativeLayout
            android:id="@+id/adapter_student_homework_subjectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/divider"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/from_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date -"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="@dimen/secondaryText"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/from_date_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/secondaryText"
                android:layout_toRightOf="@id/from_txt"/>

            <TextView
                android:id="@+id/divider_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/secondaryText"
                android:layout_toRightOf="@id/from_date_list"/>

            <TextView
                android:id="@+id/to_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date to -"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="@dimen/secondaryText"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/divider_txt"/>

            <TextView
                android:id="@+id/to_date_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/secondaryText"
                android:layout_toRightOf="@id/to_txt"/>
            <TextView
                android:id="@+id/leave_status_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green_300"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Pending"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>

